<div id="{{Identity}}-card" class="mdl-cell mdl-cell--2-col">
    <div class="user-card-square mdl-card mdl-shadow--2dp" data-username="{{Identity}}" data-displayName="{{DisplayName}}">
        <div class="mdl-card__title mdl-card--expand hand white user-selection">
            <h3 class="mdl-card__title-text username-title">
                <div class="avatar avatar-rounded"></div>
                <span>
                    {{DisplayName}}
                    {{#IsYou}}
                    (You)
                    {{/IsYou}}
                </span>
            </h3>
        </div>
        <div id="{{Identity}}-sparkline"></div>
        <div id="{{Identity}}-pulse" class="pulse-status grey"></div>
        <div class="mdl-card__supporting-text white">
            <div class="mdl-card__actions">
                <a class="mdl-button mdl-js-button mdl-button--icon" href="{{FactsURL}}" target="_blank" title="{{DisplayName}} Facts page">
                    <i class="material-icons">stars</i>
                </a>
                <a class="mdl-button mdl-js-button mdl-button--icon" href="{{ItzURL}}" target="_blank" title="In-The-Zone dashboard">
                    <i class="material-icons">lens</i>
                </a>
                <a class="mdl-button mdl-js-button mdl-button--icon delete" data-username="{{Identity}}" title="Remove {{DisplayName}} from this dashboard">
                    <i class="material-icons">delete</i>
                </a>
            </div>
        </div>
    </div>
</div>